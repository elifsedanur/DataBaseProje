@using eTicaretProje.Models
@model IEnumerable<ProductModel>

<div class="row row-cols-1 row-cols-md-3 g-5">
    @foreach (var urun in Model)
    {
        <div class="col">
            <div class="card h-100 mb-3">
                <img class="card-img-top" src="~/Upload/@urun.Image" alt="@urun.Name" with="100" height="400">
                <div class="card-body">
                    <h5 class="card-img">
                        <a href="/Home/Details/@urun.Id">@urun.Name</a>
                    </h5>
                    <p class="card-text pt-2 desciption">@urun.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-body-secondary product-price">
                        <i class="fa fa-try" aria-hidden="true"></i>
                        @urun.Price
                    </small>
                    <a href="/Home/Details/@urun.Id" class="btn btn-primary btn-sm pull-right">
                        <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                        Ürünü incele
                    </a>
                </div>
            </div>
        </div>
    }

</div>

