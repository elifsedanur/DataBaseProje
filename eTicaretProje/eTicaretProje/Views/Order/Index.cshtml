@model IEnumerable<eTicaretProje.Models.AdminOrderModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container pb-5">
    <h2>Siparişler</h2>
    <hr />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sipariş Numarası</th>
                <th>Sipariş Tarihi</th>
                <th>Sipariş Durumu</th>
                <th>Ödeme Yöntemi</th>
                <th>Toplam Fiyat</th>
                <th>Ürün Sayısı</th>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderNumber</td>
                    <td>@item.OrderDate</td>


                    @if (item.OrderState == eTicaretProje.Entity.EnumOrderState.Waiting)
                    {
                        <td>Hazırlanıyor</td>

                    }
                    else if (item.OrderState == eTicaretProje.Entity.EnumOrderState.InCargo)
                    {
                        <td>Kargoya Verildi</td>

                    }
                    else
                    {
                        <td>Teslim Edildi</td>
                    }
                    <td>@item.PaymentMethod</td>
                    <td>@item.Total</td>
                    <td>@item.Count</td>
                    <td>
                        @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

