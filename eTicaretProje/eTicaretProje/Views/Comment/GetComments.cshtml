@model IEnumerable<eTicaretProje.Entity.Comment>

<div class="row mt-3">
    <div class="col-md-12">
        <div class="bd-example bd-example-tabs">
            <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-expanded="true">Reviews</a>
                </li>

            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">

                    @if (Model.Count() == 0)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                            Bu Ürüne Ait Yorum Bulunamadı.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                            <strong>@Model.Count() Adet </strong> Yorum Bulundu.
                        </div>
                        foreach (var item in Model)
                        {
                            <div class="container-fluid">
                                <i class="fa fa-user-circle" aria-hidden="true"></i>
                                <strong> @item.UserName</strong>     @item.CommentDate.ToShortDateString()

                            </div>
                            <div class="container-md">
                                <p>@item.Content</p>
                            </div>
                            <hr />

                        }



                    }


                </div>
            </div>
        </div>
    </div>
</div>
