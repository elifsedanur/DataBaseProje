@model eTicaretProje.Models.Cart
@{
    ViewBag.Title = "Index";
}
<div class="container pb-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Alışveriş Sepeti</h2>
            <hr />
            @if (Model.cardLines.Count > 0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Quantity</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Sub Total</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.cardLines)
                        {
                            <tr>
                                <td><img src="~/Upload/@item.Product.Image" width="50" /></td>
                                <td>@item.Quantity</td>
                                <td>@item.Product.Name</td>
                                <td>@item.Product.Price</td>
                                <td>@((item.Product.Price * item.Quantity).ToString("c"))</td>
                                <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                    {
                                        @Html.Hidden("Id", item.Product.Id)
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                            Delete
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5"></td>
                            <td>
                                @Model.Total().ToString("c")
                                @using (Html.BeginForm("ClearTheCart", "Cart"))
                                {
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                                        Sepeti Boşalt
                                    </button>
                                }
                            </td>

                        </tr>
                    </tfoot>
                </table>
                <div class="col-md-4">

                    <table class="table">
                        <tbody>

                            <tr>
                                <th>Kargo</th>
                                <td>Ücretsiz</td>
                            </tr>

                        </tbody>
                    </table>
                    <div class="text-center">

                        <a href="/Home/List" class="btn btn-primary">
                            <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                            Alışverişe Devam Et
                        </a>

                        <a href="/Cart/Checkout" class="btn btn-primary">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            Alışverişi Tamamla
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">

                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>

                    Alışveriş Sepetinizde Ürün Bulunmamaktadır.
                </div>

            }


        </div>
    </div>
</div>